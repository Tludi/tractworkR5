<h2>Project</h2>
<p id="notice"><%= notice %></p>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="contact-box center-version">

        <a href="profile.html">
          <%= image_tag(current_user.gravatar_url, class: "img-circle") %>


          <h3 class="m-b-xs"><strong><%= @project.name %></strong></h3>

          <div class="font-bold"><%= @project.contact_id %></div>
          <address class="m-t-md">
            <strong>Twitter, Inc.</strong><br>
            <%= @project.address1 %><br>
            <%= @project.city %>,<%= @project.state %>, <%= @project.zip_code %><br>
            <abbr title="Phone">P:</abbr> (123) 456-7890
          </address>
          <div class="center"><%= link_to "edit", edit_admin_project_path(@project)  %></div></br>
        </a>
        <div class="contact-box-footer">
          <div class="m-t-xs btn-group">
            <a class="btn btn-xs btn-white"><i class="fa fa-phone"></i> Call </a>
            <a class="btn btn-xs btn-white"><i class="fa fa-envelope"></i> Email</a>
          </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
          <div class="row">
            <div class="col-lg-12">
              <div class="ibox float-e-margins">
                <div class="ibox-title">
                  <h5>Current Project Users</h5>

                </div>
                <div class="ibox-content">

                <table class="table table-striped table-bordered table-hover projects display" cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th>Name</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @project.users.each do |u| %>                
                        <tr class="gradeX">
                          <td><%= link_to u.fullName, admin_users_path(u) %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <h5>Add User to <%= @project.name  %></h5>
                  

                  <%= form_for [:admin, @project] do |f| -%>
                    <div class="">
                      <%= f.collection_select(:user_ids, @account.users.all, :id, :fullName) %>
 
 
                      &nbsp;
                      <%= f.button :submit %>
                    </div>
                  <% end -%>

                </div>
                <%= debug(params) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
