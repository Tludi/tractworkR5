<div class="md-skin">
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= @account.name %>'s Users</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Dashboard', admin_root_path  %>
      </li>
      <li class="active">
        Users
      </li>
      <li class="active">
        <strong><%= @user.fullName %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="contact-box center-version">

        <a href="profile.html">
          <%= image_tag(current_user.gravatar_url, class: "img-circle") %>


          <h3 class="m-b-xs"><strong><%= @user.fullName %></strong></h3>

          <div class="font-bold"><%= @user.role %></div>
          <address class="m-t-md">
            <strong>Twitter, Inc.</strong><br>
            795 Folsom Ave, Suite 600<br>
            San Francisco, CA 94107<br>
            <abbr title="Phone">P:</abbr> (123) 456-7890
          </address>
          <div class="center"><%= link_to "edit", edit_admin_user_path(@user)  %></div></br>
        </a>
        <div class="contact-box-footer">
          <div class="m-t-xs btn-group">
            <a class="btn btn-xs btn-white"><i class="fa fa-envelope"></i> Email</a>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Current User Projects</h5>

        </div>
        <div class="ibox-content">

        <table class="table table-striped table-bordered table-hover projects display" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
                <tr class="gradeX">
                  <td><%= link_to "Project 1", "#" %></td>
                </tr>
            </tbody>
          </table>
          <%= link_to "Add User to Project", admin_projects_path  %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
