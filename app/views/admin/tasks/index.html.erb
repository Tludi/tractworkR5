<!-- admin projects index.html.erb -->
<div class="md-skin">
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2><%= @account.name %>'s Projects</h2>
      <ol class="breadcrumb">
        <li>
          <%= link_to 'Dashboard', admin_root_path  %>
        </li>
        <li class="active">
          <strong>Projects</strong>
        </li>
      </ol>
    </div>
    <div class="col-lg-2">

    </div>
  </div>

  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h5><%= @account.name %> Projects</h5>
            <div class="ibox-tools">
              <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
              </a>
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-wrench"></i>
              </a>
              <ul class="dropdown-menu dropdown-user">
                <li>
                  <a href="#">Config option 1</a>
                </li>
                <li>
                  <a href="#">Config option 2</a>
                </li>
              </ul>
              <a class="close-link">
                <i class="fa fa-times"></i>
              </a>
            </div>
          </div>
          <div class="ibox-content">
            <table class="table table-striped table-bordered table-hover projects display" cellspacing="0" width="100%">
              <thead>
                <tr>
                  <th>Code #</th>
                  <th>Name</th>
                  <th>Address</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @tasks.each do |task| %>
                  <tr>
                    <td><%= task.name %></td>
                    <td><%= link_to 'Edit', edit_admin_task_path(task) %></td>
                    <td><%= link_to 'Destroy', admin_task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

<br>

<%= link_to 'New Task', new_admin_task_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>