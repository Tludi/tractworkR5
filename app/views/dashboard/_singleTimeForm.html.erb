<!-- _singleTimeForm.html.erb -->
<h4>Total Time Today</h4>
<%= "#{@hours_worked}  Hours"   %>

<br>
<br>
<%= simple_form_for [@workday, @work_segment], html: { class: 'form-horizontal' } do |wd| %>

    <div class="actions">
    <p>
      <%= wd.label :project %>
      <%= wd.input :project_id,  collection: [1,2,3], selected: [1]  %>
    </p>
    <p>
      <%= wd.label :task %>
      <%= wd.input :task,  collection: ["General Work","Hanging", "Taping", "Cleanup"], selected: ["General Work"]  %>
    </p>
      <%= wd.input :timeEntry, label: "Enter Time Worked" %>
      <%= wd.submit "Save", class: "btn btn-primary"%>
    </div>

<% end -%>

<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
  <% end %>
