<!-- _singleTimeForm.html.erb -->
<h4>Total Time Today</h4>
<%= "#{@hours_worked}  Hours"   %>

<br>
<br>
<%= simple_form_for @workday, html: { class: 'form-horizontal' } do |wd| %>
  <%= wd.simple_fields_for :workSegments, WorkSegment.new do |ws|  %>
    <div class="actions">
    <p>
      <%= ws.input :project_id,  collection: @projects, selected: @projects.first  %>
    </p>
    <p>
      <%= ws.input :task,  collection: @tasks, selected: @tasks.first  %>
    </p>
      <%= ws.input :timeEntry, label: "Enter Time Worked", input_html: {value: '0'} %>
    </div>
  <% end %>
  
  <%= wd.submit "Save", class: "btn btn-primary"%>
<% end -%>

<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
  <% end %>
